---
import Layout from "./Layout.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import LinkedinIcon from "@components/icon/Linkedin.astro";
import InstagramIcon from "@components/icon/Instagram.astro";
import GithubIcon from "@components/icon/Github.astro";
import TwitterIcon from "@components/icon/Twitter.astro";
import DiscordIcon from "@components/icon/Discord.astro";

const {
  content: { title, nomPro, description, link, pubDate, avatar, image, tags },
} = Astro.props;
---

<Layout title={title}>
  <Header />
  <section class="bg-white text-white">
    <div
      class="mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center"
    >
      <div class="mx-auto max-w-3xl text-center">
        <h1
          class="bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 bg-clip-text text-3xl font-extrabold text-transparent sm:text-5xl"
        >
          <span class="sm:block"> {nomPro} </span>
        </h1>

        <p class="mx-auto mt-4 max-w-xl sm:text-xl/relaxed text-black">
          {description}
        </p>

        <div class="mt-4 mb-4">
          <a
            class="group relative inline-flex items-center overflow-hidden rounded px-8 py-3 text-white bg-black focus:outline-none focus:ring active:bg-black"
            href={link}
          >
            <span
              class="absolute -start-full transition-all group-hover:start-4"
            >
              <GithubIcon class="h-6 w-6" />
            </span>

            <span class="text-sm font-medium transition-all group-hover:ms-4"
              >GitHub
            </span>
          </a>
        </div>

        <div class="mt-8 flex flex-wrap justify-center gap-4">
          <!-- Icon redes ðŸ“±inicio -->
          <ul class="mt-10 flex justify-center gap-6 md:gap-8">
            <li>
              <a
                href=""
                rel="noreferrer"
                target="_blank"
                class="text-gray-700 transition hover:text-gray-700/75"
              >
                <TwitterIcon class="h-6 w-6" /></a
              >
            </li>

            <li>
              <a
                href=""
                rel="noreferrer"
                target="_blank"
                class="text-gray-700 transition hover:text-gray-700/75"
              >
                <LinkedinIcon class="h-6 w-6" />
              </a>
            </li>

            <li>
              <a
                href=""
                rel="noreferrer"
                target="_blank"
                class="text-gray-700 transition hover:text-gray-700/75"
              >
                <InstagramIcon class="h-6 w-6" /></a
              >
            </li>

            <li>
              <a
                href=""
                rel="noreferrer"
                target="_blank"
                class="text-gray-700 transition hover:text-gray-700/75"
              >
                <DiscordIcon class="h-6 w-6" />
              </a>
            </li>
          </ul>
          <!-- Icon redesðŸ“±Final -->
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>
