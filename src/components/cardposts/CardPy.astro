---
interface Props {
  title: string;
  nomPro: string;
  description: string;
  link: string;
  pubDate: Date;
  avatar: string;
  image: string;
  tags: string[];
  slug: string;
}

const { title, description, nomPro, link, pubDate, avatar, image, tags, slug } =
  Astro.props;
---

<article class="py-3">
  <div>
    <a
      href={`/proyectos/${slug}`}
      class="relative block overflow-hidden rounded-lg border border-gray-100 p-4 sm:p-6 lg:p-8 transition hover:shadow-lg"
    >
      <span
        class="absolute inset-x-0 bottom-0 h-2 bg-gradient-to-r from-green-300 via-blue-500 to-purple-600"
      ></span>

      <div class="sm:flex sm:justify-between sm:gap-4">
        <div>
          <h3 class="text-lg font-bold text-[#292e3b] sm:text-xl">
            {nomPro}
          </h3>
          <p class="mt-1 text-xs font-medium text-gray-500">
            <button>
              {title}
              <svg
                width="15"
                height="15"
                viewBox="0 0 24 24"
                fill="rgb(107, 114, 128)"
                class=""
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M5.315 2.1c.791 -.113 1.9 .145 3.333 .966l.272 .161l.16 .1l.397 -.083a13.3 13.3 0 0 1 4.59 -.08l.456 .08l.396 .083l.161 -.1c1.385 -.84 2.487 -1.17 3.322 -1.148l.164 .008l.147 .017l.076 .014l.05 .011l.144 .047a1 1 0 0 1 .53 .514a5.2 5.2 0 0 1 .397 2.91l-.047 .267l-.046 .196l.123 .163c.574 .795 .93 1.728 1.03 2.707l.023 .295l.007 .272c0 3.855 -1.659 5.883 -4.644 6.68l-.245 .061l-.132 .029l.014 .161l.008 .157l.004 .365l-.002 .213l-.003 3.834a1 1 0 0 1 -.883 .993l-.117 .007h-6a1 1 0 0 1 -.993 -.883l-.007 -.117v-.734c-1.818 .26 -3.03 -.424 -4.11 -1.878l-.535 -.766c-.28 -.396 -.455 -.579 -.589 -.644l-.048 -.019a1 1 0 0 1 .564 -1.918c.642 .188 1.074 .568 1.57 1.239l.538 .769c.76 1.079 1.36 1.459 2.609 1.191l.001 -.678l-.018 -.168a5.03 5.03 0 0 1 -.021 -.824l.017 -.185l.019 -.12l-.108 -.024c-2.976 -.71 -4.703 -2.573 -4.875 -6.139l-.01 -.31l-.004 -.292a5.6 5.6 0 0 1 .908 -3.051l.152 -.222l.122 -.163l-.045 -.196a5.2 5.2 0 0 1 .145 -2.642l.1 -.282l.106 -.253a1 1 0 0 1 .529 -.514l.144 -.047l.154 -.03z"
                ></path>
              </svg>
            </button>
          </p>
        </div>

        <div class="hidden sm:block sm:shrink-0">
          <img
            alt={image}
            src={avatar}
            class="size-16 rounded-lg object-cover shadow-sm"
          />
        </div>
      </div>

      <div class="mt-4">
        <p class="text-pretty text-sm text-gray-500">
          {description}
        </p>
      </div>

      <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
        {
          tags.map((item) => (
            <span class="inline-block bg-gray-200 rounded-full px-2 text-xs font-medium text-gray-800 mr-2">
              {item}
            </span>
          ))
        }
      </p>
    </a>
  </div>
</article>
