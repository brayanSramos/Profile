<style>
  /* ----- */
  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    border-bottom: 1px solid transparent;
    background-color: transparent;
    -webkit-backdrop-filter: blur(20px);
    backdrop-filter: blur(20px);
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }
  .navbar-logo img {
    height: 40px; /* Ajusta este valor seg√∫n el tama√±o deseado del logo */
  }
  .navbar .navbar-tex ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
  }

  .navbar .navbar-tex li {
    margin-left: 20px;
  }

  .navbar .navbar-tex li a {
    display: flex;
    align-items: center;
    color: #292e3b;
    font-size: 18px;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }
  .navbar .navbar-tex li a:hover {
    color: #e5e52e;
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-decoration-style: wavy;
    text-underline-offset: 7px;
  }
  .navbar .navbar-tex li a i {
    margin-right: 8px; /* Espacio entre el √≠cono y el texto */
  }
</style>

<script>
  /* üìå cambio de boton para modo oscuro a claro */
  const $switchOnIcon = document.querySelector("#switchOn") as HTMLLIElement;
  const $switchOffIcon = document.querySelector("#switchOff") as HTMLLIElement;
  const $toggleswitch = document.querySelector(
    "#toggle-switch"
  ) as HTMLLIElement;

  let isEnabled = false;
  $toggleswitch.addEventListener("click", () => {
    isEnabled = !isEnabled;
    $switchOnIcon.classList.toggle("hidden", !isEnabled);
    $switchOffIcon.classList.toggle("hidden", isEnabled);
  });

